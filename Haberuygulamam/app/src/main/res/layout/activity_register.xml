<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/arkplan"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="10dp"
    android:paddingBottom="5dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/laconiclogo"
        android:scaleType="fitXY"
        android:layout_marginTop="0dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
       >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adınız"
                android:textColor="@color/white"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adEditText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="text"
                android:background="@drawable/edittext_rounded_bg"
                android:padding="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:radius="8dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soyadınız"
                android:textColor="@color/white"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/soyadEditText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="text"
                android:background="@drawable/edittext_rounded_bg"
                android:padding="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:radius="8dp" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Adınız"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/kullaniciAdiEditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="text"
        android:background="@drawable/edittext_rounded_bg"
        android:padding="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:radius="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telefon Numaranız"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/telefonnumarasıEditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="text"
        android:background="@drawable/edittext_rounded_bg"
        android:padding="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:radius="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-Posta Adresiniz"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ePostaEditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="text"
        android:background="@drawable/edittext_rounded_bg"
        android:padding="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:radius="8dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Şifre"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_end_color"
        app:endIconMode="password_toggle"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sifreEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/edittext_rounded_bg"
            android:padding="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:radius="8dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/Kayitol"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Kayıt Ol"
        android:background="@drawable/registerkayitolbutton"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_marginTop="10dp"

         />

    <TextView
        android:id="@+id/kayitli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zaten üye misiniz? Giriş için tıklayın"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="20dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Copyright © 2023"
            android:textColor="@color/white"
            android:textSize="10sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
           android:gravity="bottom|center"
            android:text="App Version v.1.0"
            android:textColor="@color/white"
            android:textSize="8sp" />

    </LinearLayout>



</LinearLayout>
